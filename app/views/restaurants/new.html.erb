<h1>New!</h1>

<%= simple_form_for @restaurant do |f| %>
  <%= f.label :name, "Name of your restaurant" %>
  <%= f.text_field :name %>
  <%= f.label :adress, "the address" %>
  <%= f.text_field :address %>
  <%= f.label :phone_number, "phone number" %>
  <%= f.number_field :phone_number %>
  <%= f.label :category, "category" %>
  <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.submit %>
<% end %>

<%= link_to "back to list", restaurants_path %>
